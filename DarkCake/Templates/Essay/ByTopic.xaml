<UserControl x:Class="AussieCake.Templates.ByTopic"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             FontSize="14">
    <Grid>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0" Background="#ffcbb3" VerticalAlignment="Center">
            <TextBlock Name="lblTopic" Margin="20" TextWrapping="Wrap" FontSize="18" />
        </StackPanel>

        <TextBox Name="txtTemplate" Grid.Row="1" Grid.Column="0" TextWrapping="Wrap" Margin="10" />

        <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" Margin="10" HorizontalAlignment="Right">
            <Button Name="btnCheck" Content="Check" Width="100" Click="BtnCheck_Click" />
            <Button Name="btnNext" Content="Next" Width="100" Margin="4,0,0,0" Click="BtnNext_Click" />
        </StackPanel>

    </Grid>
</UserControl>
